<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<template id="inherit_support_submit_ticket" inherit_id="website_support.support_submit_ticket" >
<xpath expr="//div[@class='container']//form//div[3]" position="before" >
                  <div t-attf-class="form-group #{error and 'department' in error and 'has-error' or ''}">
                      <label class="control-label" for="name">Department</label>
                      <select class="form-control" id="department" name="department">
                          <t t-foreach="department_id" t-as="department">
                              <option t-attf-value="#{department.id}" t-esc="department.name"></option>
                          </t>
                      </select>
                  </div>
</xpath>
</template>
</data>

</odoo>