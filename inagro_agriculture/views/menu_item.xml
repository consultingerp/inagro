        <record id="action_cultivation_report" model="ir.actions.act_window">
            <field name="name">Cultivation Report</field>
            <field name="res_model">stock.move</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="stock.view_move_tree"/>
            <field name="search_view_id" ref="stock.view_move_search"/>
            <field name="view_mode">tree,kanban,graph,form</field>
            <field name="domain" eval="[('picking_id.is_cultivation','=',True)]"/>
            <field name="context">{'search_default_done': 1, 'search_default_groupby_location_id': 1}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new cultivation
              </p><p>
                This menu gives you the full traceability of inventory
                operations on a specific product. You can filter on the product
                to see all the past or future movements for the product.
              </p>
            </field>
        </record>

        <record model="ir.actions.act_window.view" id="inagro_action_stock_move_tree_all">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="stock.view_move_tree"/>
            <field name="act_window_id" ref="action_cultivation_report"/>
        </record>

        

