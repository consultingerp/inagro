<odoo>

    
    <!-- Room form -->
    <record id="view_form_diskusi_form" model="ir.ui.view">
        <field name="name">diskusi.marketing.form</field>
        <field name="model">diskusi.marketing</field>
        <field name="arch" type="xml">
            <form string="Form Discuss">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="tanggal" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>


    <!-- Room Tree -->
    <record id="view_form_diskusi_tree" model="ir.ui.view">
        <field name="name">diskusi.marketing.tree</field>
        <field name="model">diskusi.marketing</field>
        <field name="arch" type="xml">
            <tree string="Form Discuss">
                <field name="name"/>
                <field name="tanggal" />
            </tree>
        </field>
    </record>

    

</odoo>
